<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="roscoe.carson.com.livecard.activities.CreateCardActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schoolEditText_createCard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="school" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/courseEditText_createCard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/schoolEditText_createCard"
        android:layout_alignEnd="@+id/schoolEditText_createCard"
        android:layout_below="@+id/schoolEditText_createCard"
        android:hint="course" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionEditText_createCard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/courseEditText_createCard"
        android:layout_alignEnd="@+id/courseEditText_createCard"
        android:layout_below="@+id/courseEditText_createCard"
        android:hint="question" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answerEditText_createCard"
        android:layout_below="@+id/questionEditText_createCard"
        android:layout_alignRight="@+id/questionEditText_createCard"
        android:layout_alignEnd="@+id/questionEditText_createCard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="answer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Card"
        android:id="@+id/createCardButton_createCard"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/answerEditText_createCard"
        android:layout_alignEnd="@+id/answerEditText_createCard" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/answerEditText_createCard"
        app:srcCompat="@android:drawable/ic_menu_camera" />

</RelativeLayout>
